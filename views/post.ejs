<body>
    <header>
        <div class="logo-wrap">
            <a href="/posts"> <img src='https://ifh.cc/g/9qtKfn.png' border='0'></a>
        </div>
    </header>

    <section id="container">

        <section id="main_container d-flex flex-column">
            <% if (user) {%>
                <!-- <p>
                <h2>Hello <%=user.first_name%>
                </h2>
                </p> -->
                <!-- Start Loop -->
                <div class="posts-container">
                    <% for (let i=0; i < posts.length; i++) { %>
                        <div class="contents flex-column card">
                            <header class="top">
                                <div class="user_container">
                                    <!-- <div class="profile_img"> -->
                                    <div class="profile-pic">
                                        <label class="-label" for="file">
                                            <input name="file" type="file" onchange="loadFile(event)" data-id="<%=i%>"
                                                hidden />
                                            <img class="profile" src="/icons/smantha.svg" id="output" width="200"
                                                onclick="selectNewImage(event)" />
                                            <script>
                                                function selectNewImage(event) {
                                                    event.target.closest("label").querySelector("input").click();
                                                }
                                                function loadFile(event) {
                                                    console.log("this", event.target)
                                                    let image = event.target.closest("label").querySelector("img");
                                                    console.log(image)
                                                    image.src = URL.createObjectURL(event.target.files[0]);
                                                    let des_photo = event.target.closest(".card").querySelector(".des_photo");
                                                    console.log(des_photo)
                                                    des_photo.src = image.src;
                                                    let com_photos = event.target.closest(".card").querySelectorAll(".com_photo");
                                                    console.log(com_photos);
                                                    com_photos.forEach(com_photo => {
                                                        com_photo.src = image.src;
                                                    });
                                                    // let photos = document.querySelectorAll('.photo');
                                                    // console.log(photos);
                                                    // photos.forEach(photo => {
                                                    //     photo.src = image.src;
                                                    // });
                                                };
                                            </script>
                                        </label>
                                    </div>
                                    <!-- </div> -->
                                    <div class="user_name">
                                        <div class="nick_name">
                                            <% users.forEach(oneUser=> {%>
                                                <% if(posts[i].user_id===oneUser.user_id) {%>
                                                    <%= oneUser.first_name%>
                                                        <%= oneUser.last_name%>
                                                            <% } %>
                                                                <% }) %>
                                        </div>
                                        <div class="place">@DreamCatchers Cafe</div>
                                    </div>
                                </div>

                                    <section class="moreClick">
                                            <img id="user" src="/icons/png.png">
                                        <div class="options">
                                                <a href="/posts/edit/<%= posts[i].post_id %>">
                                                <button class="post-menu-btn" id="editBtn">Edit</button></a>
                                                <button class="post-menu-btn" id="<%= posts[i].post_id %>" onclick="handleDeletePost(event)" id="deleteBtn">Delete</button>         
                                                <button class="post-menu-btn" id="cancelBtn">Cancel</button>
                                        </div>     
                                    </section>
                            </header>
                            <div class="img_section">
                                <div class="trans_inner">
                                    <div>
                                        <img src=<%=posts[i].image_url%>>
                                    </div>
                                </div>
                            </div>
                            <div class="bottom_icons">
                                <div class="left_icons">
                                    <div class="heart_btn" >
                                        <form id="submitForm" method="POST" action="/posts/<%=posts[i].post_id%>/like" name="post_likes">
                                            <input class="posts_id" type="hidden" value="<%=posts[i].post_id%>" name="post_id">
                                          <% for (let k=0; k < userPosts.length; k++) { %>
                                            <% if(posts[i].post_id == userPosts[k].post_id) {%>  
                                               
                                          
                                          
                                    <% if (userPosts[k].liked_by_current_user === 1 ) {%> 
                                          <img type="submit" data-name="post_likes" src="/icons/like.svg" class="favorite liked">
                                     <% } else {%> 
                                     <img type="submit" data-name="post_likes" src="/icons/heart.svg" class="favorite">
                                           <% } %> 
                                        <% } %>
                                     <% } %>  
                                          <%=posts[i].total_likes%> 
                                        </form>
                                    </div>
                                
                                    <div name="likes" class="sprite_bubble_icon message">
                                        <img src="/icons/message.svg">
                                    </div>
                                    <div class="sprite_share_icon" data-name="share">
                                        <img src="/icons/share.svg">
                                    </div>
                                </div>
                                <div class="right_icon">
                                    <div class="sprite_bookmark_outline" data-name="bookmark">
                                        <img src="/icons/save.svg" class="bookmark">
                                    </div>
                                </div>
                            </div>
                         
                            <div class="comment_container">
                                <div class="comment" id="comment-list-ajax-post37">
                                    <div class="comment-detail">
                                        <div class="profile_img">
                                            <img class="user des_photo" src="/icons/smantha.svg">
                                        </div>
                                        <div class="d-flex flex-column">
                                            <div class="d-flex">
                                                <div class="nick_name">
                                                    <% users.forEach(oneUser=> {%>
                                                        <% if(posts[i].user_id===oneUser.user_id) {%>
                                                            <%= oneUser.first_name%>
                                                                <%= oneUser.last_name%>
                                                                    <% } %>
                                                                        <% }) %> <br>
                                                </div>
                                                <div>
                                                    <%=posts[i].description %>
                                                </div>
                                            </div>
                                            <li class="total">  see all <%=posts[i].total_comments%> comments</li>
                                        </div>
                                        <!-- TODO -->
                                        <!-- Loop over comments -->
                                        <!-- Need comments in post object -->
                                        <div class="comment">
                                        </div>
                                    </div>
                                </div>
                                <div class="small_heart">
                                    <div class="sprite_small_heart_icon_outline"></div>
                                </div>
                            </div>
                            <form method="POST" action="/posts/<%=posts[i].post_id%>/comments" id="commentForm" class="comment_form">
                            <div class="timestamp">
                                <%=posts[i].timestamp%>
                            </div>
                                <div class="d-flex flex-column ps-4">
                                    <div class="comment-field">
                                        <input id="<%=posts[i].post_id%>" class="add-comment" name="comments"
                                            type="text" placeholder="Add a Comment...">
                                        <div class="upload-btn" data-name="comment">
                                            <input class="submit-btn" type="submit" name="comment" />
                                            <input type="hidden" value="<%=posts[i].post_id%>" name="post_id">
                                        </div>
                                    </div>
                                    <div class="commentDiv">
                                        <% for (let j=0; j < commentId.length; j++) { %>
                                            <% if(posts[i].post_id==commentId[j].post_id) {%>
                                                <div>
                                                    <% users.forEach(oneUser=> {%>
                                                        <% if(commentId[j].user_id===oneUser.user_id) {%>
                                                            <div class="d-flex ps-4">
                                                                <div class="profile-img">
                                                                    <img class="user com_photo"
                                                                        src="/icons/small smantha.svg">
                                                                </div>
                                                                <div class="commentName">
                                                                    <%= oneUser.first_name%>
                                                                        <%= oneUser.last_name%>
                                                                </div>
                                                                <!-- </div> -->
                                                                <div class="commentId">
                                                                    <%= commentId[j].comments %>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                                <% }) %>
                                                </div>
                                                <% } %>
                                                    <% } %>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <% } %>
                </div>
                <!-- End Loop -->
                <% } %>
                    <!-- End IF -->


                    <nav class="bottom-nav">

                        <a class="nav-btn" href="/posts">
                            <img class="nav-icon" src="/icons/home.svg">
                        </a>

                        <a class="nav-btn" href="#">
                            <img class="nav-icon" src="/icons/explore.svg">
                        </a>

                        <a class="nav-btn" href="/posts/create">
                            <img class="nav-icon" src="/icons/post-new.svg">
                        </a>

                        <a class="nav-btn" href="#">
                            <img class="nav-icon" src="/icons/txt.svg">
                        </a>

                        <a class="nav-btn" href="/authentication/login">
                            <img class="nav-icon" src="/icons/profile.svg">
                        </a>

                        <div class="horizontal-underline"></div>

                    </nav>
        </section>
        <!-- End of Main Container -->

    </section>

