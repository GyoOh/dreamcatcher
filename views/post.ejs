<!DOCTYPE html>

<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet"
        href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="/posts.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body>
    <header>
        <div class="d-flex justify-content-center">

            <img src='https://ifh.cc/g/9qtKfn.png' border='0'>
        </div>
    </header>
    <div class="container">

        <% if (user) {%>
            <!-- <p>
            <h2>Hello <%=user.first_name%>
            </h2>
            </p> -->


            <% posts.forEach(post=> {%>
                <div class="card card-body">
                    <div class="profile-header d-flex flex-row">
                        <div class="profile-img">
                            <img class="img-fluid"
                                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ7_Z2XN_X198kUx_ZR-d6W-UloNVtRFlAFkQ&usqp=CAU">
                        </div>


                        <div class="w-75">
                            <h3 class="primary-color">
                                <%=user.first_name%>
                            </h3>
                            <div class="second-color">location</div>
                        </div>

                        <div class="primary-color d-flex align-items-center h-100">
                            <span class="material-symbols-outlined">
                                more_vert
                            </span>
                        </div>

                    </div>


                    <div class="d-flex flex-column w-100 align-items-center">
                        <div class="content-img">
                            <img class="img-fluid" src=<%=post.image_url%> class="img">
                        </div>
                    </div>

                    <div class="img_section">
                        <!-- <div class="trans_inner">
                            <div><img src=""</div>
                            </div>
                            </div> -->
                        <div class="d-flex second-color">
                            <div class="sprite_heart_icon_outline " name="39" data-name="heartbeat">
                                <span class="material-icons favorite">
                                    favorite_border
                                </span>
                            </div>
                            <div class="sprite_bubble_icon">
                                <span class="material-icons">
                                    chat_bubble_outline
                                </span>
                            </div>
                            <div class="sprite_share_icon" data-name="share">
                                <span class="material-icons">
                                    send
                                </span>
                            </div>

                            <div class="sprite_bookmark_outline" data-name="bookmark">
                                <span class="material-icons bookmark">
                                    bookmark_border
                                </span>
                            </div>
                        </div>

                        <div class="likes m_text">
                            <span id="like-count-39">22,346</span>
                            likes
                        </div>

                        <p>
                            <%=user.first_name%>
                                <%=post.description%>
                        </p>



                        <div class="small_heart">
                            <div class="sprite_small_heart_icon_outline"></div>
                        </div>
                        <small class="text-muted">Last updated 3 mins ago</small>
                        <time class="time" datetime=""></time>
                        <%= new Date();%>
                    </div>

                    <div class="card">
                        <div class="comment_field d-flex" id="add-comment-post37">
                            <input type="text" placeholder="Add a Comment...">
                            <div class="upload_btn m_text" data-name="comment">POST</div>
                        </div>
                    </div>
                </div>
                <% }) %>
                    <% } %>
                        <nav class="nav nav-pills nav-fill">
                            <!-- <div id="horizontal-underline"></div> -->
                            <a class="nav-link second-color horizontal-underline" aria-current="page" href="/">
                                <span class="material-icons">
                                    home
                                </span>
                            </a>
                            <a class="nav-link second-color" href="#">
                                <span class="material-icons">
                                    explore
                                </span>
                            </a>
                            <a class="nav-link second-color" href="/posts/create">
                                <span class="material-icons">
                                    photo_camera
                                </span>
                            </a>
                            <a class="nav-link second-color" href="#">
                                <span class="material-icons">
                                    send
                                </span>
                            </a>
                            <a class="nav-link second-color" href="/authentication/login">
                                <span class="material-icons">
                                    person
                                </span>
                            </a>
                        </nav>
    </div>

    <script src="main.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>