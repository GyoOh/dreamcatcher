<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>FoodieShare</title>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/posts.css">
    <link rel="stylesheet" href="/profile.css">
    <link
        href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>


<body>
    <header>
        <div class="logo-wrap">
            <a href="/posts"> <img src='https://ifh.cc/g/9qtKfn.png' border='0'></a>
        </div>
    </header>

    <section id="container">

        <section id="main_container d-flex flex-column">
            <% if (user) {%>
                <!-- <p>
                <h2>Hello <%=user.first_name%>
                </h2>
                </p> -->
                <!-- Start Loop -->

                <div class="posts-container">
                    <% for (let i=0; i < posts.length; i++) { %>
                        <div class="contents flex-column card">
                            <header class="top">
                                <div class="user_container">
                                    <!-- <div class="profile_img"> -->

                                    <div class="profile-pic">
                                        <label class="-label" for="file">
                                            <input id="file" type="file" onchange="loadFile(event)" />
                                            <img class="profile" src="/icons/smantha.svg" id="output" width="200" />
                                        </label>
                                    
                                    </div>
                                    <!-- </div> -->
                                    <div class="user_name">
                                        <div class="nick_name">
                                            <% users.forEach(oneUser=> {%>
                                                <% if(posts[i].user_id===oneUser.user_id) {%>
                                                    <%= oneUser.first_name%>
                                                        <%= oneUser.last_name%>
                                                            <% } %>
                                                                <% }) %>
                                        </div>
                                        <div class="place">@DreamCatchers Cafe </div>
                                    </div>
                                </div>

                                <form class="newPicture formNoDefault displayNone">
                                    <!-- <a href="#">  -->
                                    <div class="btn">
                                        <div class="moreBtn">
                                            <img class="user" src="/icons/png.png">
                                        </div>

                                        <!-- <div>
                                        <button class="editBtn">edit</button>
                                        <button class="deleteBtn">delete</button>
                                        </div> -->
                                    </div>
                                </form>

                            </header>
                            <div class="img_section">
                                <div class="trans_inner">
                                    <div>
                                        <img src=<%=posts[i].image_url%>>
                                    </div>
                                </div>
                            </div>
                            <div class="bottom_icons">
                                <div class="left_icons">
                                    <div class="heart_btn" onclick="likePost()">
                                        <img src="/icons/heart.svg" class="favorite">
                                    </div>
                                    <div name="likes" class="sprite_bubble_icon message">
                                        <img src="/icons/message.svg">
                                    </div>
                                    <div class="sprite_share_icon" data-name="share">
                                        <img src="/icons/share.svg">
                                    </div>
                                </div>
                                <div class="right_icon">
                                    <div class="sprite_bookmark_outline" data-name="bookmark">
                                        <img src="/icons/save.svg" class="bookmark">
                                    </div>
                                </div>
                            </div>
                            <!-- <div class="likes">
                                    <span id="like-count-39">22,346</span>
                                    likes
                                </div> -->

                            <div class="comment_container">
                                <div class="comment" id="comment-list-ajax-post37">
                                    <div class="comment-detail">
                                        <div class="profile_img">

                                            <img class="user" src="/icons/smantha.svg">
                                        </div>
                                        <div class="nick_name">
                                            <% users.forEach(oneUser=> {%>
                                                <% if(posts[i].user_id===oneUser.user_id) {%>
                                                    <%= oneUser.first_name%>
                                                        <%= oneUser.last_name%>
                                                            <% } %>
                                                                <% }) %>
                                        </div>

                                        <div>
                                            <%=posts[i].description %>
                                        </div>
                                        <!-- TODO -->
                                        <!-- Loop over comments -->
                                        <!-- Need comments in post object -->
                                        <div class="comment">
                                        </div>
                                    </div>
                                </div>
                                <div class="small_heart">
                                    <div class="sprite_small_heart_icon_outline"></div>
                                </div>
                            </div>
                            <form method="POST" action="/posts" id="commentForm" class="comment_form">
                                <div class="comment_field">
                                    <div class="comment_field">

                                        <input id="<%=posts[i].post_id%>" class="add_comment" name="comments"
                                            type="text" placeholder="Add a Comment...">

                                        <div class="upload_btn" data-name="comment">
                                            <input type="submit" name="comment">
                                            <input type="hidden" value="<%=posts[i].post_id%>" name="post_id">
                                        </div>
                                    </div>
                                    <% for (let j=0; j < posts.length; j++) { %>
                                        <% if(posts[i].post_id==posts[j].post_id) {%>
                                            <% users.forEach(oneUser=> {%>
                                                <% if(posts[j].user_id===oneUser.user_id) {%>
                                                    <%= oneUser.first_name%>
                                                        <%= oneUser.last_name%>
                                                            <div>
                                                                <%= posts[j].comments %>
                                                            </div>
                                                            <% } %>
                                                                <% }) %>
                                                                    <% } %>
                                                                        <% } %>
                                </div>

                            </form>
                        </div>


                        <% } %>
                </div>
                <!-- End Loop -->
                <% } %>
                    <!-- End IF -->

                    <nav class="bottom-nav">

                        <a class="nav-btn" href="/posts">
                            <img src="/icons/home.svg">
                        </a>

                        <a class="nav-btn" href="#">
                            <img src="/icons/explore.svg">
                        </a>

                        <a class="nav-btn" href="/posts/create">
                            <img src="/icons/post-new.svg">
                        </a>

                        <a class="nav-btn" href="#">
                            <img src="/icons/txt.svg">
                        </a>

                        <a class="nav-btn" href="/authentication/login">
                            <img src="/icons/profile.svg">
                        </a>

                        <div class="horizontal-underline"></div>

                    </nav>
        </section>
        <!-- End of Main Container -->

    </section>

    <script>
        //make this into function
        const contents = document.querySelector('div.contents')
        contents.addEventListener('click', (event) => {
            if (event.target.classList.contains("favorite")) {
                if (event.target.classList.contains("liked")) {
                    event.target.classList.remove('liked');
                    event.target.src = "/icons/heart.svg"
                } else {
                    event.target.classList.add('liked')
                    event.target.src = "/icons/like.svg"
                }
            }
            if (event.target.classList.contains("bookmark")) {
                if (event.target.classList.contains("saved")) {
                    event.target.classList.remove('saved');
                    event.target.src = "/icons/save.svg"
                } else {
                    event.target.classList.add('saved');
                    event.target.src = "/icons/saved.svg"
                }
            }
        })
    </script>


    <script src="javascript/main.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    <script>
        let loadFile = function (event) {
            let image = document.getElementById("output");
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>



</body>

</html>