<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>FoodieShare</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/posts.css">
    <link rel="stylesheet" href="/profile.css">
    <link
        href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>


<body>
    <header>
        <div class="logo-wrap">
            <a href="/posts"> <img src='https://ifh.cc/g/9qtKfn.png' border='0'></a>
        </div>
    </header>
    <a class="nav-btn" href="/authentication/login">
        <img class="nav-icon" src="/icons/settings.svg">
    </a>

   
        

        <section id="main_container d-flex flex-column">
            <% if (user) {%>
                <div class="posts-container">
                    <% for (let i=0; i < posts.length; i++) { %>
                                    <div class="profile-pic">
                                        <label class="-label" for="file">
                                            <input name="file" type="file" onchange="loadFile(event)" data-id="<%=i%>"
                                                hidden>
                                            <img class="profile" src="/icons/smantha.svg" id="output" width="200"
                                                onclick="selectNewImage(event)">
                                            <script>
                                                function selectNewImage(event) {
                                                    event.target.closest("label").querySelector("input").click();
                                                }
                                                function loadFile(event) {
                                                    console.log("this", event.target)
                                                    let image = event.target.closest("label").querySelector("img");
                                                    console.log(image)
                                                    image.src = URL.createObjectURL(event.target.files[0]);
                                                    let des_photo = event.target.closest(".card").querySelector(".des_photo");
                                                    console.log(des_photo)
                                                    des_photo.src = image.src;
                                                    let com_photos = event.target.closest(".card").querySelectorAll(".com_photo");
                                                    console.log(com_photos);
                                                    com_photos.forEach(com_photo => {
                                                        com_photo.src = image.src;
                                                    });
                                                };
                                            </script>
                                        </label>
                                    </div>
                              
                                        <div class="nick_name">
                                            <% users.forEach(oneUser=> {%>
                                                <% if(posts[i].user_id===oneUser.user_id) {%>
                                                   <a href="/posts/<%= oneUser.first_name %> "> <%= oneUser.first_name%>
                                                        <%= oneUser.last_name%></a>
                                                            <% } %>
                                                                <% }) %>
                                        </div>
                                        <div class="place">@DreamCatchers Cafe</div>
                                    </div>
                                </div>
                                    <section class="moreClick">
                                            <img id="user" src="/icons/png.png">
                                    </section>
                            </header>
                            <div class="img_section">
                                <div class="trans_inner">
                                    
                                </div>
                            </div>
                            <div class="bottom_icons">
                                <div class="left_icons">
                                    <div class="heart_btn" >
                        </div>                    <% } %>
                </div>

                <% } %>
                   
        </section>
        <nav class="bottom-nav">

            <a class="nav-btn" href="/posts">
                <img class="nav-icon" src="/icons/home.svg">
            </a>

            <a class="nav-btn" href="#">
                <img class="nav-icon" src="/icons/explore.svg">
            </a>

            <a class="nav-btn" href="/posts/create">
                <img class="nav-icon" src="/icons/post-new.svg">
            </a>

            <a class="nav-btn" href="#">
                <img class="nav-icon" src="/icons/txt.svg">
            </a>

            <a class="nav-btn" href="/authentication/login">
                <img class="nav-icon" src="/icons/profile.svg">
            </a>

            <div class="horizontal-underline"></div>

        </nav>

    </section>

   

    <script src="javascript/main.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>